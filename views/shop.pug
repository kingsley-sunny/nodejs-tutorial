extends layouts/main-layout.pug

block content
    main 
      .grid
        each product in products
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}
            .card__image
              img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" alt=`A ${product.title}`)
            .card__content
              p.product__price $19.99
              p.product__descriptionA very interesting book about so many even more interesting things!
            .card__actions
                button.btn Add to Cart


        if products.length === 0
          h2 You have no products Please 
            a(href="/admin/add-product") add a product
          